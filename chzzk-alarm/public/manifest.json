{
  "manifest_version": 3,
  "name": "Chzzk Alarm",
  "version": "1.0",
  "description": "A Chrome extension for Chzzk alarms.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {}
  },
  "icons": {},
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}